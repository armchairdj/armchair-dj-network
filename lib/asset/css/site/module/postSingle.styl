article.post {
  > header,
  > section {
    standardRuleLine(#333);
  }

  header.postInfo {
    h1.title {
      font-size: 40px;
    }

    h1.title span.version,
    h2.artist {
      font-size: 31px;
    }

    h4.type {
      font-size: 22px;
    }

    h5.year {
      font-size: 26px;
    }
  }

  > section {
    &.body {
      p {
        dropCap(80px);

        @media $mediaL {
          dropCap(200px);
        }
      }
    }
  }

  aside.coverArt {
    centerHorizontal();
    coverArt(250px);
  }

  @media $mediaL {
    > section {
      padding-right: 300px;
    }

    aside.coverArt {
      margin: 0 0 1em 1em;
      float: right;
    }
  }
}
