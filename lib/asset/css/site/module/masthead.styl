nav#masthead {
  paddingVertical(20px)

  a.mascot,
  span.mascot {
    display: none;
  }

  header {
    text-align: center;

    h1,
    h2,
    h3 {
      margin: 0;
      normal();
    }

    h1,
    h2 {
      tight();
      font-size: 46px;

      span {
        bold();
      }

      a {
        plainLink();
      }
    }

    h3 {
      breathable();
      font-size: 18px;
      color: $taglineTextColor;

      span {
        white-space: nowrap;
        display: inline-block;
      }
    }
  }

  @media $mediaL {
    paddingVertical(40px);
    position: relative;
    min-height: $mascotSizeMastheadDesktop;

    a.mascot,
    span.mascot {
      flipBackgroundImage();
      backgroundForegroundImage($size: $mascotSizeMastheadDesktop);
      position: absolute;
      top: 20px;
      display: block;
      background-position: top right;
    }

    header {
      text-align: right;
      padding-left: 180px;

      h1,
      h2 {
        font-size: 54px;
      }

      h3 {
        font-size: 22px;

        span {
          display: block;
        }
      }
    }
  }
}
