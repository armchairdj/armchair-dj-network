nav#masthead {
  paddingVertical(20px)

  header {
    text-align: center;

    h1,
    h3 {
      margin: 0;
      normal();
    }

    h1 {
      tight();
      font-size: 46px;

      span {
        bold();
      }

      a {
        plainLink();
        color: $bodyTextColor;

        &:hover {
          color: lighten($bodyTextColor, 20);
        }
      }
    }

    h3 {
      breathable();
      font-size: 18px;
      color: $taglineTextColor;

      span {
        white-space: nowrap;
        display: inline-block;
      }
    }
  }

  @media $mediaL {
    paddingVertical(40px);

    header {
      text-align: right;

      flipBackgroundImage();
      backgroundForegroundImage(150px);
      background-repeat: no-repeat;
      background-image: url('/image/theme/jet/armchair.jpg');
      background-position: top right;

      h1 {
        padding-top: 20px;
        font-size: 54px;
      }

      h3 {
        font-size: 22px;

        span {
          display: block;
        }
      }
    }
  }
}
