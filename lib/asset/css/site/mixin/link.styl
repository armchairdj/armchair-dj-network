underlinedLink() {
  cursor: pointer;
  text-decoration: underline;

  &:hover {
    text-decoration: underline;
  }
}

plainLink() {
  cursor: pointer;
  text-decoration: none;

  &:hover {
    text-decoration: none;
  }
}

linkColor($off, $on = false) {
  color: $off;
  transition: color 1s;

  if $on != false {
    &:hover {
      color: $on;
    }
  }
}

linkColorStandard() {
  linkColor($linkColor, $linkColorHover);
}

navLinkColor() {
  linkColor($navLinkColor, $navLinkColorHover);
}
