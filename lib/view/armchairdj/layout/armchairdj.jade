include /shared/mixin/index
include /armchairdj/mixin/index
doctype html

html(class='no-js' lang='en')

  head
    title!=viewHelper.tokens([headline, i18n('name')], ' | ')

    +metaStandard()

    block meta

    +script('armchairdj', 'script-modernizr')

    +externalStylesheet('https://fonts.googleapis.com/css?family=Raleway:300,600')
    +stylesheet('armchairdj', 'stylesheet-jet')

    +touchIcons()

  body
    #wrap
      include /armchairdj/partial/flash
      include /armchairdj/partial/masthead

      #content
        .container

          block content

      include /armchairdj/partial/footer

    +script('armchairdj', 'script-site')

