mixin metaStandard()
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')

  meta(name='viewport' content='width=device-width, initial-scale=1.0')

  +metaAuthor()
  +metaDescription()
  +metaKeywords()

mixin metaAuthor()
  meta(name='author' content='Brian J. Dillard')

mixin metaDescription()
  if pageDescription
    meta(name='description' content=pageDescription)

mixin metaKeywords()
  if pageKeywords
    meta(name='keywords' content=pageKeywords.join(','))

mixin script(fileName)
  script(src=viewHelper.assetFile(fileName, 'js'))

mixin stylesheet(fileName)
  link(rel='stylesheet' type='text/css' href=viewHelper.assetFile(fileName, 'css'))
  
mixin externalStylesheet(href)
  link(rel='stylesheet' type='text/css' href=href)

mixin touchIcons()
  link(rel='apple-touch-icon-precomposed' href='/apple-touch-icon-precomposed.png')
  link(rel='icon' sizes='192x192' href='/apple-touch-icon-precomposed.png')
  link(rel='shortcut icon' href='/favicon.ico')

mixin mascot()
  - if (isHomepage)
    span.mascot &nbsp;
  - else
    a.mascot(href='/' title='back to homepage') &nbsp;

mixin siteTitle()
  | Armchair #{''}
  span DJ
