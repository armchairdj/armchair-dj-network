extends /layout/global

block content
  article.auth
    header
      h1
        ul.piped
          li: a(href='/auth/registration') Registration
          li Login

      if error
        h2.error!=error.message

    section.form
      form(method='post' action='/auth/login')
        .field
          label
            span Email
            input(type='text' name='email' value=params.email)

        .field
          label
            span Password
            input(type='password' name='password')

        input(type='submit' value='submit')
