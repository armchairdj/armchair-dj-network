include /mixin/index
doctype html

html(class='no-js' lang='en')

  head
    +metaStandard(pageDescription)

    title!=viewHelper.tokens([headline, i18n.site.name], ' | ')

    block meta

    +script('script-modernizr')

    +externalStylesheet('https://fonts.googleapis.com/css?family=Raleway:300,600')
    +stylesheet('stylesheet-jet')

    +touchIcons()

  body
    #wrap
      include /partial/masthead

      #content
        .container
          include /partial/flash

          block content

      include /partial/footer

    +script('script-site')

